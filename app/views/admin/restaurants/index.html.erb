<h2>All restaurants</h2>
<p><%= link_to "Add a new restaurant", new_restaurant_path %></p>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <h4><%= link_to restaurant.name, restaurant_path(restaurant) %> - <%= restaurant.category %></h4>
      <p><%= restaurant.address %></p>
      <p><%= link_to "Edit", edit_admin_restaurant_path(restaurant) %> | <%= link_to "Delete", admin_restaurant_path(restaurant), method: :delete %></p>
    </li>
  <% end %>
</ul>
